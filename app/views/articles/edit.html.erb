<h1>Editing article</h1>

<%= form_for @article, url: article_path(@article), method: :patch do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <ul>
    <%
      @allcategories.each do |category|
          article_is_checked=false;
          @article.categories.each do |checkedcategory| %>

            <% next if category != checkedcategory%>
            <li>
              <%= check_box_tag 'category_ids[]',category.id,true %>
              <%= label_tag('category_ids[]',category.name) %>
            </li>
            <% article_is_checked=true %>
        <% end %>

        <% if not article_is_checked %>
          <li>
            <%= check_box_tag 'category_ids[]',category.id,false %>
            <%= label_tag('category_ids[]',category.name) %>
          </li>
        <% end %>

    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

