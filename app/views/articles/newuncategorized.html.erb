<h1>New Article</h1>
<%= form_for @article, url: {action: "createuncategorized"} do |f| %>

<% if @article.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @categories.any? %>
  <%= f.label :categories %>
  <ul id="categorieslist">
    <% @categories.each do |category| %>
        <li>
          <%= check_box_tag 'category_ids[]',category.id, params[:category_ids]?params[:category_ids].include?(category.id.to_s):false %>
          <%= label_tag('category_ids[]',category.name) %>
        </li>
    <% end %>
  </ul>
<% end %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>



