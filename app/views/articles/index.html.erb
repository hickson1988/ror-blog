<h1>Listing articles of category: <%=@category.name%></h1>

<% if current_user %>
  <%= link_to 'Add article to category', new_category_article_path(@category) %>
<% end %>

<% @articles.each do |article| %>
  <div class="post-preview">
    <h2 class="post-title">
    <%= link_to article.title, article_path(article) %>
    </h2>
    <div id="categoriestags">
      Categories:
      <% category_names=Array.new %>
      <% article.categories.each do |category| %>
        <%category_names.push(link_to category.name, category_articles_path(category))%>
      <% end %>
      <%= raw category_names.join(', ')%>
    </div>
    <h3 class="post-subtitle">
        <%= truncate(article.text, length: 110) %>
    </h3>
    <span> <%= link_to 'Read more', article_path(article) %></span>
    <% if current_user and current_user == article.user%>
      <div id="articleactions">
        <%= link_to 'Edit', edit_article_path(article) %> |
        <%= link_to 'Delete', article_path(:id => article.id, :category_id =>@category.id),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
    <p class="post-meta">Posted on <%= article.updated_at.strftime('%c') %></p>
  </div>
  <hr>
<% end %>
</table>
