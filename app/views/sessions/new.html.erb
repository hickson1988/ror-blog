<h1>Log in</h1>

<% if flash[:error] %>
  <div id="error_explanation">
    <h2>
      Error:
    </h2>
    <ul>
        <li><%= flash[:error] %></li>
    </ul>
  </div>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Log in" %>
  </p>
  <p>
    No account?   <%= link_to 'Create one now.', signup_path %>
  </p>
<% end %>
